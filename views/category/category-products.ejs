<%- include('../header') %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Category Products</title>
    <link rel="stylesheet" href="/css/category/category-products.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>

  <body>
      <div class="category-container">
        <h2 class="text-center"><%= category.name %> Products</h2>
      <% if (products.length > 0) { %>
      <div class="list-group">
        <% products.forEach((product, index) => { %>
          <a href="/products/<%= product._id %>"class="list-group-item list-group-item-light" style="text-decoration: none;"
            ><%= index + 1 %>. <%= product.name %></a
          >
        <% }); %>
      </div>
      <% } else { %>
      <p class="text-center">No products available for this category.</p>
      <% } %>
    </div>
  </body>
</html>
