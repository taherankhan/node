<%- include('header') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <!-- Add your CSS links here -->
</head>
<body>
    <div class="container">
        <h2 class="text-center">Checkout</h2>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <% if (cartItems.length > 0) { %>
                    <% cartItems.forEach(item => { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.productId.name %></h5>
                                <p class="card-text">Price: $<%= item.productId.price %></p>
                                <p class="card-text">Quantity: <%= item.quantity %></p>
                            </div>
                        </div>
                    <% }); %>
                    <div class="total-amount">
                        <h4>Total Amount: $<%= total.toFixed(2) %></h4>
                    </div>
                    <form action="/cart/place-order" method="POST">
                        <button type
                        ="submit" class="btn btn-primary">Place Order</button>
                    </form>
                <% } else { %>
                    <p class="text-center">Your cart is empty</p>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Add your JavaScript links here -->
</body>
</html>
